        "jsonpath": "$[0].tag_name",
        "regex": "v(?<m1>[\\d.]+)\\.(?<m2>[\\d.]+)\\.(?<d1>[\\d.]+)\\.(?<h1>[\\da-z]+)",
        "replace": "${1}.${2}.${3}.${4}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kiennq/emacs-build/releases/download/v$version/emacs-$matchH1-ucrt-x86_64-mps.msix#/dl.7z"
