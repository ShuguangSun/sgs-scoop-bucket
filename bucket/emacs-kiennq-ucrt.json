{
    "homepage": "https://github.com/kiennq/emacs-build",
    "version": "31.315.20240904.04cfac4",
    "description": "Scripts to build a distribution of Emacs from sources, using MSYS2 and Mingw64(32).",
    "license": "GPL (Emacs) + MIT (build script)",
    "architecture": {
        "64bit": {
            "url": "https://github.com/kiennq/emacs-build/releases/download/v31.315.20240904.04cfac4/emacs-04cfac4-ucrt-x86_64.msix#/dl.7z",
            "hash": "b3845485f852717ff22a20d838ec2dd4cd54f182b880f929f7fe40c4c4042667"
        }
    },
    "shortcuts": [
        [
            "bin\\runemacs.exe",
            "Emacs (kiennq UCRT)"
        ]
    ],
    "installer": {
        "script": [
            "Push-Location \"$dir\"",
            "dir 'bin\\*%2b*' | %{ren \"$_\" \"$($_.Name -replace '%2b','+')\"}",
            "Pop-Location"
        ]
    },
    "checkver": {
        "url": "https://api.github.com/repos/kiennq/emacs-build/releases",
        "jsonpath": "$[0].tag_name",
        "regex": "v(?<m1>[\\d.]+)\\.(?<m2>[\\d.]+)\\.(?<d1>[\\d.]+)\\.(?<h1>[\\da-z]+)",
        "replace": "${1}.${2}.${3}.${4}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kiennq/emacs-build/releases/download/v$version/emacs-$matchH1-ucrt-x86_64.msix#/dl.7z"
            }
        }
    }
}
