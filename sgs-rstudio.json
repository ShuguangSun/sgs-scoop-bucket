{
    "version": "1.1.463",
    "license": "AGPL-3.0-only",
    "homepage": "https://www.rstudio.com/",
    "url": "https://s3.amazonaws.com/rstudio-ide-build/desktop/windows/RStudio-1.2.1244.zip",
    "hash": "aef63d386db6c91eb68849962b360f1098166750757ade8d51ae2fefda0a9ff6",
    "depends": "r",
    "bin": "bin/rstudio.exe",
    "shortcuts": [
        [
            "bin/rstudio.exe",
            "R Studio"
        ]
    ],
    "post_install": [
        "$rstudio=$env:APPDATA+'/RStudio'",
        "if (-not (Test-Path $rstudio)) {",
        "    mkdir $rstudio | Out-Null",
        "    $rbin = 'RBinDir=' + $scoopdir.Replace('\\','/') + '/apps/r/current/bin/'",
        "    if($architecture.Equals('64bit')) { $rbin+='x64'} else { $rbin+='i386'}",
        "    $rstudioini = $rstudio+'/desktop.ini'",
        "    $enc = New-Object Text.UTF8Encoding $False",
        "    [IO.File]::WriteAllLines($rstudioini, ('[General]', $rbin), $enc)",
        "    Write-Host Configuration written to $rstudioini",
        "}"
    ],
    "checkver": {
        "url": "https://www.rstudio.com/products/rstudio/download/preview/",
        "re": "RStudio-([\\d.]+).zip"
    },
    "autoupdate": {
        "url": "https://s3.amazonaws.com/rstudio-ide-build/desktop/windows/RStudio-$version.zip"
    }
}
